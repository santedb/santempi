<?xml version="1.0" encoding="utf-8"?>
<MatchConfiguration xmlns="http://santedb.org/matcher"
                    id="org.santedb.smpi.matching.default"
                    nonmatchThreshold="0.5"
                    matchThreshold="0.9">
  <target resource="Patient">
    <event>BeforeInsert</event>
    <event>BeforeUpdate</event>
  </target>
  <blocking op="and" maxResults="1000">
    <!-- Any patient who was born the same year -->
    <filter>dateOfBirth=:(date_diff|$input.dateOfBirth)&lt;1y</filter>
    <!-- Any patient who has a matching given name within 2 characters -->
    <filter>name.component[Given].value=$input.name.component[Given].value</filter>
    <!-- Any patient who has a matching family name -->
    <filter>name.component[Family].value=$input.name.component[Family].value</filter>
  </blocking>
  <blocking op="or" maxResults="100">
    <filter>identifier.value=$input.identifier.value&amp;identifier.authority.id=$input.identifier.authority.id&amp;identifier.authority.isUnique=true</filter>
  </blocking>
  <classification>
    <!-- Week of birth -->
    <vector property="dateOfBirth" u="0.019" m="0.98" whenNull="nonmatch" required="true" >
      <assert op="eq">
        <transform name="date_extract">
          <args>
            <string>w</string>
          </args>
        </transform>
      </assert>
    </vector>
  </classification>
</MatchConfiguration>