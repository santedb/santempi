<BiReportDefinition xmlns="http://santedb.org/bi" id="org.santempi.bi.reports.matches.type" label="ui.mpi.bi.reports.matches.type">
  <meta>
    <authors>
      <add>Justin Fyfe (Fyfe Software Inc.) &lt;justin@fyfesoftware.ca></add>
    </authors>
    <annotation>
      <div xmlns="http://www.w3.org/1999/xhtml">
        <p>Report for patient registrations by age</p>
      </div>
    </annotation>
  </meta>
  <dataSources>
    <view name="by-type">
      <query ref="#org.santempi.bi.query.matches.stats" />
      <aggregations>
        <add>
          <providers>
            <invariant>npgsql</invariant>
            <invariant>FirebirdSQL</invariant>
          </providers>
          <grouping>
            <column name="class_code">class_code</column>
            <column name="rel_type">rel_type</column>
          </grouping>
          <select>
            <column name="n" fn="count-distinct">ent_rel_id</column>
          </select>
        </add>
      </aggregations>
    </view>
  </dataSources>
  <views>
    <add id="org.santempi.bi.reports.matches.type.chart" label="ui.bi.common.pie" name="chart">
      <div xmlns="http://www.w3.org/1999/xhtml" xmlns:bi="http://santedb.org/bi/view">
        <!-- Shows line chart with each audit event type -->
        <bi:chart source="by-type" type="pie" legend="true">
          <bi:title>Match Classifications</bi:title>
          <bi:labels >(rel_type == "MDM-Master" ? "Match" : rel_type == "MDM-IgnoreCandidateLocalRecord" ? "Non-Match" : "Probable Match") + " (" + (class_code == "MDM-Verified" ? "Verified" : "Auto") + ")"</bi:labels>
          <bi:dataset label="# Links" fn="sum">n</bi:dataset>
        </bi:chart>
      </div>
    </add>
  </views>
</BiReportDefinition>